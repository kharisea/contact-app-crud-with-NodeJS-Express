<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Kontak</h2>

            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(err => { %>
                            <li><%= err.msg %> </li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= contacts.oldNama || contacts.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contacts.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required value="<%= contacts.email %>">
                </div>
                <div class="mb-3">
                  <label for="noHP" class="form-label">No. HP</label>
                  <input type="text" class="form-control" id="noHP" name="noHP" required value="<%= contacts.noHP %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
              </form>
        </div>
    </div>
</div>